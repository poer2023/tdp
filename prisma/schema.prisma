/// City - Visited cities for city markers feature
model City {
  id         String    @id @default(cuid())
  code       String    @unique // City code (e.g., CN-11 for Beijing)
  name       String             // City name
  nameEn     String?            // English name
  lat        Float              // Center latitude
  lng        Float              // Center longitude
  visits     Int       @default(0) // Visit count
  firstVisit DateTime?          // First visit date
  lastVisit  DateTime?          // Last visit date
  createdAt  DateTime  @default(now())
  updatedAt  DateTime  @updatedAt

  @@index([visits])
}

/// Achievement - Footprint achievement badges
model Achievement {
  id          String   @id @default(cuid())
  code        String   @unique // e.g., "walker_10k", "driver_500k"
  name        String            // Display name
  nameEn      String?           // English name
  description String            // Description
  descriptionEn String?         // English description
  icon        String            // Emoji or icon name
  category    String            // e.g., "distance", "cities", "streak"
  threshold   Float             // Unlock threshold value
  order       Int      @default(0) // Display order
  createdAt   DateTime @default(now())
  
  userAchievements UserAchievement[]
  
  @@index([category])
}

/// UserAchievement - User's achievement progress
model UserAchievement {
  id            String       @id @default(cuid())
  achievementId String
  achievement   Achievement  @relation(fields: [achievementId], references: [id])
  progress      Float        @default(0) // Current progress value
  unlockedAt    DateTime?    // Null if not unlocked
  createdAt     DateTime     @default(now())
  updatedAt     DateTime     @updatedAt

  @@unique([achievementId]) // One record per achievement (single user)
  @@index([unlockedAt])
}
