/// Footprint Trip/Track
/// Records walking, driving, cycling, and other transport data
model Footprint {
  id        String          @id @default(cuid())
  type      FootprintType   @default(WALK)
  source    FootprintSource @default(MANUAL)
  title     String?
  startTime DateTime
  endTime   DateTime?
  distance  Float?          // kilometers
  duration  Int?            // seconds
  
  // Route data - encoded polyline or JSON coordinates
  polyline  String?         @db.Text
  
  // Start/End locations
  startLat  Float?
  startLng  Float?
  endLat    Float?
  endLng    Float?
  startAddr String?
  endAddr   String?
  
  // Extended metadata (speed, elevation, energy, etc.)
  metadata  Json?
  
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([type, startTime])
  @@index([source, startTime])
  @@index([startTime])
}

enum FootprintType {
  WALK
  RUN
  BIKE
