/// AI Diagnosis Log
/// Records all AI-powered diagnostics and auto-fix attempts
model AIDiagnosisLog {
  id String @id @default(cuid())

  // Platform & Error Details
  platform     String // e.g., "Bilibili", "Douban"
  errorType    String // e.g., "CSS Selector Not Found", "API Timeout"
  errorMessage String  @db.Text
  htmlSnapshot String? @db.Text // Optional HTML for context

  // AI Diagnosis Result
  aiReason   String  @db.Text
  aiSolution String  @db.Text
  canAutoFix Boolean @default(false)
  confidence Float // 0.0 to 1.0

  // Auto-Fix Status
  autoFixApplied Boolean  @default(false)
  autoFixSuccess Boolean?
  autoFixDetails Json? // e.g., { "oldSelector": ".video-item", "newSelector": ".new-video-card" }

  // Cost Tracking
  tokensUsed Int? // Total tokens consumed
  costYuan   Float? // Cost in CNY (¥)

  // Metadata
  credentialId String? // Related credential if any
  syncJobId    String? // Related sync job if any

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([platform, createdAt])
  @@index([canAutoFix, autoFixApplied])
}

