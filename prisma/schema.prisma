  // Relations
  syncJobs      SyncJobLog[] @relation("CredentialSyncJobs")
  syncLogs      SyncLog[]

  @@index([lastValidatedAt])
  @@index([platform, isValid])
  @@index([nextCheckAt])
  @@index([autoSync])
}

/// Credential Sync Log
/// Records all sync operations for auditing and monitoring
model SyncLog {
  id String @id @default(cuid())

  // Sync Metadata
  credentialId String?
  credential   ExternalCredential? @relation(fields: [credentialId], references: [id], onDelete: SetNull)

  platform    String // e.g., "BILIBILI", "DOUBAN", "STEAM"
  triggerType SyncTriggerType @default(MANUAL) // Manual vs Auto

  // Sync Configuration
  syncConfig Json? // Config used for this sync

  // Sync Results
  status  SyncStatus @default(RUNNING)
  success Boolean    @default(false)

  itemsTotal    Int @default(0)
  itemsSuccess  Int @default(0)
  itemsFailed   Int @default(0)
  itemsNew      Int @default(0)
  itemsUpdated  Int @default(0)
  itemsExisting Int @default(0)

  // Performance & Errors
  duration     Int? // milliseconds
  errorMessage String? @db.Text
  errorStack   String? @db.Text

  // AI Assistance
  aiDiagnosisId String? // Link to AI diagnosis if error occurred
  aiAssisted    Boolean @default(false)

  // Timestamps
  startedAt   DateTime  @default(now())
  completedAt DateTime?
  createdAt   DateTime  @default(now())

  @@index([platform, createdAt])
  @@index([credentialId, createdAt])
  @@index([status])
  @@index([triggerType])
}

enum SyncTriggerType {
  MANUAL // User clicked sync button
  AUTO // Scheduled auto-sync
  VALIDATION // Triggered during credential validation
  API // Triggered via API call
}

enum SyncStatus {
  RUNNING
  SUCCESS
  FAILED
  TIMEOUT
  CANCELLED
}

model SyncJobLog {
  id           String        @id
  platform     String
  jobType      String?
  triggeredBy  String        @default("system")
  status       SyncJobStatus @default(PENDING)
  startedAt    DateTime?
  completedAt  DateTime?
  duration     Int?
  itemsTotal   Int           @default(0)
  itemsSuccess Int           @default(0)
  itemsFailed  Int           @default(0)
  message      String?
  errorStack   String?
  errorDetails Json?
  credentialId String?
  metrics      Json?
  createdAt    DateTime      @default(now())

  // Incremental sync fields
  syncMode      String? // "full" | "incremental"
  lastCursor    String? // Last cursor position (e.g., Bilibili view_at)
  lastSyncedAt  DateTime? // Timestamp of last synced item
  itemsNew      Int       @default(0) // New items added in this sync
  itemsExisting Int       @default(0) // Items skipped (already exist)

  // Relations
  credential  ExternalCredential? @relation("CredentialSyncJobs", fields: [credentialId], references: [id], onDelete: SetNull)
  syncLogs    MediaWatchSyncLog[] @relation("SyncJobLogs") // Many-to-many relationship with MediaWatch
  githubStats GitHubStats[]       @relation("SyncJobGitHubStats")

  @@index([platform, startedAt])
  @@index([status, startedAt])
  @@index([triggeredBy, createdAt])
  @@index([credentialId])
  @@index([platform, syncMode, completedAt])
}

