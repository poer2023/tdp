    "next-themes": "0.4.6",
    "node-cron": "^4.2.1",
    "node-geocoder": "^4.4.1",
    "nodemailer": "^7.0.11",
    "pinyin-pro": "^3.18.4",
    "prisma": "6.18.0",
    "react": "19.2.1",
    "react-dom": "19.2.1",
    "react-easy-crop": "5.5.3",
    "react-markdown": "^10.1.0",
    "recharts": "^3.3.0",
