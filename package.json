{
  "name": "tdp",
  "version": "0.1.0",
  "private": true,
  "engines": {
    "node": ">=22.0.0"
  },
  "packageManager": "pnpm@10.16.1",
  "prisma": {
    "seed": "tsx prisma/seed.ts"
  },
  "pnpm": {
    "overrides": {
      "cross-spawn": "^7.0.5",
      "brace-expansion": "^2.0.1",
      "react-is": "^19.0.0",
      "jws": "3.2.3",
      "mdast-util-to-hast": "13.2.1"
    },
    "onlyBuiltDependencies": [
      "@prisma/client",
      "@prisma/engines",
      "bcrypt",
      "esbuild",
      "prisma",
      "sharp",
      "unrs-resolver"
    ]
  },
  "scripts": {
    "dev": "next dev --turbo",
    "build": "next build",
    "start": "next start",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "type-check": "tsc --noEmit",
    "typecheck": "tsc --noEmit",
    "db:migrate": "prisma migrate deploy",
    "db:generate": "prisma generate",
    "db:studio": "prisma studio",
    "db:seed": "prisma db seed",
    "backup:create": "bash scripts/backup/create-backup.sh",
    "backup:create:manual": "bash scripts/backup/create-backup.sh manual",
    "backup:create:pre-migration": "bash scripts/backup/create-backup.sh pre-migration",
    "backup:verify": "bash scripts/backup/verify-backup.sh",
    "backup:restore": "bash scripts/backup/restore-backup.sh",
    "migrate:deploy": "bash scripts/migration/deploy-migration.sh",
    "migrate:validate": "tsx scripts/migration/validate-migration.ts",
    "validate:migration": "tsx scripts/migration/validate-migration.ts",
    "validate:data": "tsx scripts/migration/validate-migration.ts",
    "setup:local": "bash scripts/setup-local.sh",
    "health-check": "bash scripts/health-check.sh",
    "test:cleanup": "pkill -9 -f 'node.*vitest' || true",
    "pretest": "pnpm run test:cleanup",
    "test": "vitest",
    "test:run": "vitest run",
    "test:watch": "vitest --watch",
    "test:coverage": "vitest run --coverage",
    "test:integration": "vitest run --config vitest.integration.config.mjs",
    "test:integration:watch": "vitest --config vitest.integration.config.mjs",
    "test:integration:coverage": "vitest run --config vitest.integration.config.mjs --coverage",
    "test:all": "pnpm run test:run && pnpm run test:integration && pnpm run test:e2e:critical",
    "test:e2e": "playwright test",
    "test:e2e:critical": "playwright test --config=playwright.critical.config.ts",
    "test:e2e:headed": "playwright test --headed",
    "test:e2e:ui": "playwright test --ui",
    "test:e2e:report": "playwright show-report",
    "test:e2e:report:critical": "playwright show-report playwright-report-critical",
    "test:e2e:i18n": "bash scripts/run-e2e-tests.sh i18n",
    "test:e2e:likes": "bash scripts/run-e2e-tests.sh likes",
    "test:e2e:auth": "bash scripts/run-e2e-tests.sh auth",
    "test:e2e:sitemap": "bash scripts/run-e2e-tests.sh sitemap",
    "test:e2e:all": "bash scripts/run-e2e-tests.sh all",
    "test:e2e:seed": "tsx e2e/utils/seed-test-data.ts",
    "test:e2e:cleanup": "tsx e2e/utils/seed-test-data.ts cleanup",
    "test:e2e:admin-tests": "playwright test e2e/content-operations.spec.ts --project=chromium",
    "test:check-coverage": "bash scripts/check-coverage.sh",
    "test:coverage-summary": "node scripts/coverage-summary.js",
    "test:features": "vitest run src/config/__tests__",
    "test:credentials": "vitest run src/app/admin/credentials src/components/admin/credential src/lib/credentials",
    "test:admin": "vitest run src/app/admin src/components/admin",
    "test:admin:smoke": "playwright test e2e/content-operations.spec.ts --project=chromium --reporter=line",
    "db:dedupe:gallery": "tsx scripts/dedupe-gallery.ts",
    "db:generate-thumbs": "tsx scripts/generate-thumbnails.ts",
    "generate-key": "tsx scripts/generate-encryption-key.ts",
    "migrate-encrypt-credentials": "tsx scripts/migrate-encrypt-credentials.ts",
    "features:list": "tsx scripts/list-features.ts",
    "fix:admin": "tsx scripts/fix-admin-role.ts",
    "prepare": "husky || true"
  },
